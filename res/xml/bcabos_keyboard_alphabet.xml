<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="8.9%p"
    android:keyHeight="50dp"
    android:horizontalGap="1%p"
    android:verticalGap="1%p">

    <!--Alphabet Keyboard-->
    <!--QWERTYUIOP-->
    <Row>
        <Key android:codes="113" android:keyLabel="q" android:keyEdgeFlags="left"/>
        <Key android:codes="119" android:keyLabel="w"/>
        <Key android:codes="101" android:keyLabel="e"/>
        <Key android:codes="114" android:keyLabel="r"/>
        <Key android:codes="116" android:keyLabel="t"/>
        <Key android:codes="121" android:keyLabel="y"/>
        <Key android:codes="117" android:keyLabel="u"/>
        <Key android:codes="105" android:keyLabel="i"/>
        <Key android:codes="111" android:keyLabel="o"/>
        <Key android:codes="112" android:keyLabel="p" android:keyEdgeFlags="right"/>
    </Row>
    <!--ASDFGHJKL-->
    <Row>
        <Key android:horizontalGap="5.95%p" android:codes="97" android:keyLabel="a" android:keyEdgeFlags="left"/>
        <Key android:codes="115" android:keyLabel="s"/>
        <Key android:codes="100" android:keyLabel="d"/>
        <Key android:codes="102" android:keyLabel="f"/>
        <Key android:codes="103" android:keyLabel="g"/>
        <Key android:codes="104" android:keyLabel="h"/>
        <Key android:codes="106" android:keyLabel="j"/>
        <Key android:codes="107" android:keyLabel="k"/>
        <Key android:codes="108" android:keyLabel="l"/>
    </Row>
    <!--(CAPS)ZXCVBNM(DEL)-->
    <Row>
        <Key android:codes="-1" android:keyIcon="@drawable/ic_keyboard_capslock_light_blue_24dp" android:keyWidth="13.85%p" android:keyEdgeFlags="left"/>
        <Key android:codes="122" android:keyLabel="z"/>
        <Key android:codes="120" android:keyLabel="x"/>
        <Key android:codes="99" android:keyLabel="c"/>
        <Key android:codes="118" android:keyLabel="v"/>
        <Key android:codes="98" android:keyLabel="b"/>
        <Key android:codes="110" android:keyLabel="n"/>
        <Key android:codes="109" android:keyLabel="m"/>
        <Key android:codes="-5" android:keyIcon="@drawable/ic_keyboard_backspace_light_blue_24dp" android:keyWidth="13.85%p" android:isRepeatable="true" android:keyEdgeFlags="right"/>
    </Row>
    <!--(MODE)(LOGO)(.,)(SPACE)(@)(ENTER)-->
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-2" android:keyLabel="123?" android:keyWidth="10%p"  android:keyEdgeFlags="left"/>
        <Key android:codes="-7" android:keyIcon="@drawable/ic_bcabos_text_default" android:keyWidth="10%p"/>
        <Key android:codes="44" android:keyLabel="&#x0002C;" android:keyWidth="10%p"/>
        <Key android:codes="32" android:keyWidth="43%p" android:keyLabel="SPASI" android:isRepeatable="true"/>
        <Key android:codes="46" android:keyLabel="&#x0002E;" android:keyWidth="10%p"/>
        <Key android:codes="-4" android:keyIcon="@drawable/ic_keyboard_return_light_blue_24dp" android:keyWidth="10%p" android:keyEdgeFlags="right"/>
    </Row>
    <!--Alphabet Keyboard-->
</Keyboard>